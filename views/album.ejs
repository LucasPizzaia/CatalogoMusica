<%- include("layout") %>
<h2>Albums</h2>
<a href="/">Back to Home</a>
<table>
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Artist</th>
    <th>Actions</th>
  </tr>
  <% albums.forEach(album => { %>
    <tr>
      <td><%= album.title %></td>
      <td><%= album.year %></td>
      <td><%= album.Artist.name %></td>
      <td>
        <a href="/albums/edit/<%= album.id %>">Edit</a> |
        <form method="POST" action="/albums/delete/<%= album.id %>" style="display: inline;">
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
  <% }) %>
</table>
