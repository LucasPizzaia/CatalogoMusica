<%- include("layout") %>
<h2>Genres</h2>
<a href="/">Back to Home</a>
<table>
  <tr>
    <th>Genre Name</th>
    <th>Actions</th>
  </tr>
  <% genres.forEach(genre => { %>
    <tr>
      <td><%= genre.name %></td>
      <td>
        <a href="/genres/edit/<%= genre.id %>">Edit</a> |
        <form method="POST" action="/genres/delete/<%= genre.id %>" style="display: inline;">
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
  <% }) %>
</table>
